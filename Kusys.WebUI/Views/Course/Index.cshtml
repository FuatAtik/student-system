@model List<Kusys.Entities.Concrete.Course>
@{
    ViewData["Title"] = "Course List";
    Layout = "_Layout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Course /</span> Course List</h4>
    <div class="card">
        <h5 class="card-header"><a href="/course-create" class="btn btn-secondary">New Course</a></h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>CourseId</th>
                    <th>Name</th>
                    <th>Course Category Name</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                @if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.CourseId</strong>
                            </td>
                            <td>@item.Name</td>
                            <td>@item.CourseCategory.Name</td>
                            <td>
                                <a href="/course-edit/@item.Id" class="btn rounded-pill btn-icon btn-outline-warning">
                                    <span class="tf-icons bx bx-edit-alt"></span>
                                </a>
                                <a href="/course-delete/@item.Id" class="btn rounded-pill btn-icon btn-outline-danger">
                                    <span class="tf-icons bx bx-trash-alt"></span>
                                </a>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>