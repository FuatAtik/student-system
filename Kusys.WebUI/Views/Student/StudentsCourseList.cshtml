@model List<Kusys.Entities.ViewModel.StudentViewModel>
@{
    ViewData["Title"] = "Students Course List";
    Layout = "_Layout";

}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Student Course/</span> Course List</h4>
    <div class="card">
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Course Names</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StudentFullname</td>
                        <td>
                            @foreach (var t in item.Courses)
                            {
                                var random = new Random();
                                var colorClasses = new string[] { "primary", "secondary", "success", "danger", "warning", "info", "dark" };
                                var randomColorClass = colorClasses[random.Next(colorClasses.Length)];
                                <span class="badge bg-label-@randomColorClass me-1">@t</span>
                            }
                        </td>


                        @* <td>@string.Join(" - ", item.Courses)</td> *@
                        <td>
                            <a data-bs-toggle="modal" data-bs-target="#modalToggle-@item.StudentId" class="btn rounded-pill btn-icon btn-outline-dark">
                                <span class="tf-icons bx bx-info-circle"></span>
                            </a>
                            <div
                                class="modal fade"
                                id="modalToggle-@item.StudentId"
                                aria-labelledby="modalToggleLabel"
                                tabindex="-1"
                                style="display: none"
                                aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="modalToggleLabel">Student Course Info</h5>
                                            <button
                                                type="button"
                                                class="btn-close"
                                                data-bs-dismiss="modal"
                                                aria-label="Close">
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <p>
                                                <b>Fullname : </b> @item.StudentFullname
                                            </p>


                                            @foreach (var tag in item.Courses)
                                            {
                                                var random = new Random();
                                                var colorClasses = new string[] { "primary", "secondary", "success", "danger", "warning", "info", "dark" };
                                                var randomColorClass = colorClasses[random.Next(colorClasses.Length)];
                                                <p>
                                                    <span class="badge bg-label-@randomColorClass">@tag</span>
                                                </p>
                                            }

                                        </div>
                                        <div class="modal-footer">

                                        </div>
                                    </div>
                                </div>
                            </div>

                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>