@model List<Kusys.Entities.ViewModel.StudentViewModel>
@{
    ViewData["Title"] = "Student Course List";
    Layout = "_Layout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Student /</span> Course List
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="table-responsive">
                    <table class="table table-striped table-borderless border-bottom">
                        <thead>
                        <tr>
                            <th class="text-nowrap">Course Id</th>
                            <th class="text-nowrap">Course Name</th>
                        </tr>
                        </thead>
                        <tbody>
                          @foreach (var studentViewModel in Model)
                             {
                                 for (var i = 0; i < studentViewModel.CourseId.Count; i++)
                                 {
                                     <tr>
                                         <td class="text-nowrap">@studentViewModel.CourseId[i]</td>
                                         <td class="text-nowrap">@studentViewModel.CourseName[i]</td>
                                     </tr>
                                 }
                             }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>